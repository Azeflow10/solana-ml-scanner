# Solana ML Scanner Configuration

scanners:
  pumpfun:
    enabled: true
    min_liquidity_sol: 3
    websocket_url: "wss://api.helius.xyz"
  
  raydium:
    enabled: true
  
  dexscreener:
    enabled: true
    poll_interval: 10

alerts:
  min_score: 75
  min_ml_confidence: 0.70
  max_alerts_per_day: 20
  
  categories:
    fast_sniper: true
    smart_sniper: true
    momentum: true
    safe: false
  
  filters:
    min_liquidity_usd: 15000
    max_liquidity_usd: 500000
    min_holders: 20
    min_rugcheck_score: 8.0
    max_top10_concentration: 40

notifications:
  telegram:
    enabled: true
    format: "detailed"
    buttons: true
  
  discord:
    enabled: false
  
  dashboard:
    enabled: true
    auto_refresh_seconds: 10

machine_learning:
  enabled: true
  ml_weight: 0.40
  rule_weight: 0.60
  
  auto_retrain:
    enabled: true
    interval_hours: 24
    min_new_samples: 100
  
  pattern_detection:
    enabled: true
    min_pattern_confidence: 0.65
    min_pattern_samples: 15

trading:
  default_position_sol: 0.06
  take_profit_percent: 150
  stop_loss_percent: -20
  
  risk_management:
    daily_loss_limit_percent: -20
    max_concurrent_positions: 3

schedule:
  active_24_7: true

security:
  blacklist_devs: []
  honeypot_check: true
  simulate_sell: true
  min_dev_reputation: 5

logging:
  level: INFO
  file: logs/scanner.log
  console: true
